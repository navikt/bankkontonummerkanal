<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds" debug="true">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{HH:mm:ss}){faint} %cyan([%-4.4t]){faint} %cyan(%0.-5p) %yellow(%-40.40logger{39}){cyan}: %m%n</pattern>
        </encoder>
    </appender>


    <logger name="no.nav" level="DEBUG"/>
    <logger name="org.apache.cxf.common.logging" level="INFO" additivity="false"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>